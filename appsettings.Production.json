{
  "ConnectionStrings": {
    "DefaultConnection": "#{ConnectionStrings.DefaultConnection}#"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning", 
      "Microsoft.EntityFrameworkCore": "Error"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "#{AllowedHosts}#",
  "ApplicationInsights": {
    "ConnectionString": "#{ApplicationInsights.ConnectionString}#"
  },
  "JwtSettings": {
    "SecretKey": "#{JwtSettings.SecretKey}#",
    "Issuer": "#{JwtSettings.Issuer}#",
    "Audience": "#{JwtSettings.Audience}#",
    "ExpirationMinutes": 60
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "#{CorsSettings.AllowedOrigins.0}#",
      "#{CorsSettings.AllowedOrigins.1}#"
    ],
    "AllowCredentials": true
  },
  "HealthChecks": {
    "EnableDetailedErrors": false,
    "Database": {
      "TimeoutSeconds": 30
    }
  },
  "ApiSettings": {
    "MaxRequestSizeBytes": 10485760,
    "DefaultPageSize": 20,
    "MaxPageSize": 100
  },
  "SecuritySettings": {
    "RequireHttps": true,
    "EnableRateLimiting": true,
    "RateLimitRequests": 100,
    "RateLimitPeriodMinutes": 1
  }
}
